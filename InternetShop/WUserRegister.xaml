        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="102,268,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.546,0.361"/>
        <TextBox x:Name="textBoxEmail" HorizontalAlignment="Left" Margin="161,182,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="313"/>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Margin="161,245,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="313"/>
        <TextBox x:Name="textBoxPassword" HorizontalAlignment="Left" Margin="161,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="313"/>
        <Label Content="Телефон:" HorizontalAlignment="Left" Margin="96,210,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxPhone" HorizontalAlignment="Left" Margin="161,214,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="313"/>
        <Button x:Name="buttonRegister" Content="Зареєструватися" HorizontalAlignment="Left" Margin="270,320,0,0" VerticalAlignment="Top" Click="buttonRegister_Click"/>
    </Grid>
</Window>
